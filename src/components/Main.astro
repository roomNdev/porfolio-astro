--- 
import Badge from '../components/Badge.astro'
import TypeWriter from '../components/TypeWriter.astro'
import ArrowIcon from '../components/icons/ArrowIcon.astro'
import Github from './icons/Github.astro'
import Linkedin from './icons/Linkedin.astro'
---

<section id="main" class="flex flex-col h-[100vh] justify-center relative" id="#main">
    
    <div class="flex justify-evenly min-[400px]:gap-x-4 min-[400px]:justify-center">
        <img src="https://i.imgur.com/ilJ9jnQ.jpg" alt="" 
        class=" size-24 min-[400px]:size-28 min-[600px]:size-32 object-cover rounded-full md:mx-8" >
        <section class="flex flex-col gap-y-4">
            <div class="flex gap-x-6 items-center flex-col md:flex-row">
                <h1 class="flex sm:text-6xl text-3xl">
                    romn
                    <span class="text-yellow-400">dev</span>
                </h1>
                
                <Badge>
                    En busca de empleo
                </Badge>
            </div>
        
            <div class="relative">
                <TypeWriter></TypeWriter>
            </div>
            <section class="pt-4 sm:pt-8 flex gap-4">
                <!-- <article class="h-8 border border-slate-500/80 rounded-xl p-3 w-24 flex"> -->
                    <a class="flex items-center justify-center gap-1
                    border border-slate-500/80 rounded-xl px-2 py-1
                    hover:bg-slate-400/40 transition-color-1 duration-500
                    hover:scale-105 transition-transform
                    text-slate-400 hover:text-slate-200
                    " href="https://github.com/roomNdev/"><Github class="size-6"/><span class="text-xs">Github</span></a>
                <!-- </article> -->
                <!-- <article class="h-8 border border-slate-500/80 rounded-xl p-3 w-24 flex"> -->
                    <a class="flex items-center justify-center gap-1
                    border border-slate-500/80 rounded-xl px-2 py-1
                    hover:bg-slate-400/40 transition-color-1 duration-500
                    hover:scale-105 transition-transform
                    text-slate-400 hover:text-slate-200
                    " href="https://ar.linkedin.com/in/roman-bustamante-9641bb217"><Linkedin class="size-6"/><span class="text-xs">LinkedIn</span></a>
                <!-- </article> -->
            </section>
        </section>
        
    </div>
    <section>
        <a class='absolute bottom-5 left-[50%] arrow' href='#projects'><ArrowIcon /></a>
    </section>
</section>
